<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="FormControlInput">Title</label>
    <input type="text" class="form-control" id="FormControlInput" name="postTitle">
  </div>

  <div class="form-group">
    <label for="FormControlTextarea">Post</label>
    <textarea class="form-control" name="postBody" id="FormControlTextarea" rows="5"></textarea>
  </div>

  <button class="btn btn-lg btn-primary" type="submit" name="home">Publish</button>

</form>

